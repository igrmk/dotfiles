#!/usr/bin/env bash
[ "$UID" -eq 0 ] || exec sudo "$0" "$@"

echo BLOCKING...
rfkill block bluetooth
echo LISTING...
rfkill list
echo RESTARTING SERVICE...
/etc/init.d/bluetooth restart
echo STATUS...
/etc/init.d/bluetooth status
echo REMOVING MODULE...
modprobe -r btusb
echo INSTALLING MODULE...
modprobe btusb
echo UNBLOCKING...
rfkill unblock bluetooth
echo RESTARTING SERVICE...
/etc/init.d/bluetooth restart
echo STATUS...
/etc/init.d/bluetooth status
