#!/usr/bin/env bash

symbol='▶▶▶'
foregrounds=("" "1" "30" "1;30" "31" "1;31" "32" "1;32" "33" "1;33" "34" "1;34" "35" "1;35" "36" "1;36" "37" "1;37" "90" "91" "92" "93" "94" "95" "96" "97")
backgrounds=("49" "40" "41" "42" "43" "44" "45" "46" "47" "100" "101" "102" "103" "104" "105" "106" "107")
printf "\n%9s" ""
printf "%-8s" "${backgrounds[@]/%/m}"
printf "\n"
for fg in "${foregrounds[@]}"; do
  printf "%6s " "${fg}m"
  for bg in "${backgrounds[@]}"; do
    printf "\033[%s;%sm  %s  \033[0m " "$fg" "$bg" "$symbol"
  done
  printf "\n"
done
printf "\n"

