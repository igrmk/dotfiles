let mapleader=' '

set visualbell
set keep-english-in-normal
set scrolloff=6
set clipboard+=unnamed,unnamedplus

sethandler <c-2> a:ide
sethandler <c-s-2> a:ide
sethandler <c-6> a:ide
sethandler <c-s-6> a:ide

sethandler <c-c> a:vim
sethandler <c-v> a:vim
sethandler <c-o> a:vim
sethandler <c-a> a:vim
sethandler <c-b> a:vim
sethandler <c-d> a:vim
sethandler <c-e> a:vim
sethandler <c-f> a:vim
sethandler <c-u> a:vim
sethandler <c-x> a:ide
sethandler <c-y> a:vim
sethandler <c-g> a:vim
sethandler <c-h> a:vim
sethandler <c-i> a:vim
sethandler <c-l> a:vim
sethandler <c-m> a:vim
sethandler <c-n> a:vim
sethandler <c-p> a:vim
sethandler <c-q> a:vim
sethandler <c-r> a:vim
sethandler <c-s> a:vim
sethandler <c-t> a:vim
sethandler <c-w> a:vim
sethandler <c-[> a:vim
sethandler <c-\> a:vim
sethandler <c-]> a:vim
sethandler <c-;> a:vim
sethandler <c-s-;> a:vim
sethandler <c-z> a:vim

Plug 'preservim/nerdtree'
Plug 'easymotion/vim-easymotion'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'

map <leader> <plug>(easymotion-prefix)
map <c-o> <Action>(Back)
map <leader>r <Action>(RenameElement)
map <leader>gu <Action>(ShowUsages)
map <leader>= <Action>(ReformatCode)
map <leader>- <Action>(OptimizeImports)
map <leader>a <Action>(ShowIntentionActions)
map <leader>m <Action>(Move)
map ,v <Action>(BuildProject)
map <c-z> <Action>(ToggleDistractionFreeMode)
map q <Action>(ActivateProjectToolWindow)
map <leader>gi <Action>(GotoImplementation)
nomap <leader>$ :source ~/.ideavimrc<CR>
